{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": [
			"**"
		],
		"ignore": [
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/.git",
			"**/.hg",
			"**/.svn",
			"**/.DS_Store",
			"**/claude-code-analysis"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
