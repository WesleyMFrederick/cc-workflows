{
	"hooks": {
		"SessionStart": [
			{
				"matcher": "startup|resume|clear|compact",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/session-start.sh"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/user-prompt-submit.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "TaskCreate|TaskUpdate",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/task-status-sync.sh"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/stop-sync.sh"
					}
				]
			}
		]
	}
}
