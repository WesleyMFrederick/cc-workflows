{
	"hooks": {
		"SessionStart": [
			{
				"matcher": "startup|resume|clear|compact",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/session-start.sh"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/user-prompt-submit.sh"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/observe.sh pre"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/observe.sh post"
					}
				]
			},
			{
				"matcher": "Read",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/citation-manager/extractor.sh"
					}
				]
			},
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/citation-manager/validator.sh"
					}
				]
			},
			{
				"matcher": "TaskCreate|TaskUpdate",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/status/task-sync.sh"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/stop.sh"
					}
				]
			}
		]
	}
}
